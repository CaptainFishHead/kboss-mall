@import "../../../styles/obh.wxss";
page {
  padding-bottom: constant(safe-area-inset-bottom); 
  padding-bottom: env(safe-area-inset-bottom);
}
.container-obh {
  box-sizing: border-box;
  background-color: #fff;
  font-family: PingFangSC-Regular, PingFang SC;
  height: 100%;
}

.container-obh .land-image {
  width: 100%;
}

.bottom-container {  
  background-color: #fff;
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  padding: 0 20rpx;
  
  padding-bottom: constant(safe-area-inset-bottom); 
  padding-bottom: env(safe-area-inset-bottom);
}

.bottom-container-fake {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding: 0 20rpx;
}

.bottom-item {
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #3072F6;
  border: 2rpx #3072F6 solid;
  flex: 1;
  line-height: 78rpx;
  margin: 25rpx 10rpx;
  color: #fff;
  border-radius: 40rpx;
}

.buy-btn {
  background-color: #0000;
  color: #3072F6;
}

.bottom-item-text {
  font-size: 28rpx;
  color: #fff;
  line-height: 38rpx;
}

.bottom-item-tips {
  font-size: 20rpx;
  color: #ADB3CA;
  line-height: 26rpx;

}