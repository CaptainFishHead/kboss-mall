@import "../../../styles/obh.wxss";

.container-obh {
  box-sizing: border-box;
  background-color: #fff;
  font-family: PingFangSC-Regular, PingFang SC;
  padding: 20rpx 0 100rpx;
}

.c-999 {
  color: #999 !important;
}

.btn-buy-cnt {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 25rpx 0;
  min-height: 130rpx;
  text-align: center;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.btn-buy {
  width: 670rpx;
  height: 80rpx;
  background: #3072F6;
  border-radius: 51rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 80rpx;
  margin:0 auto;
}
.btn-buy-h{
  height: 130rpx;
}

.head-end {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

.head-not-started {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #dc2f2f;
  line-height: 40rpx;
}

.head-ing {
  position: absolute;
  right: 0;
  top: -10rpx;
}

.ing-text {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 33rpx;
  text-align: right;
}

.time-box {
  margin-top: 2rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: flex-start;
}

.time-num {
  text-align: center;
  min-width: 42rpx;
  height: 42rpx;
  padding: 0 4rpx;
  background: #3072f6;
  border-radius: 4rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #ffffff;
  line-height: 42rpx;
}

.time-mark {
  text-align: center;
  width: 32rpx;
  height: 42rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #3072f6;
  line-height: 42rpx;
}

.msg {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

.pop-cnt {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #0d0e15;
  line-height: 42rpx;
  padding: 0 63rpx;
}

.pop-cnt-title {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 42rpx;
}

.pop-list {
  padding: 0 0 10rpx;
}

.pop-li {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 42rpx;
  padding: 20rpx 0 0rpx;
}

.list {
  position: relative;
  overflow: hidden;
  padding: 20rpx 30rpx 0;
  background: #fff url('https://static.tojoyshop.com/images/wxapp-obh/record/line.png') repeat-y 35rpx 0rpx/3rpx auto;
}

.list::before {
  content: '';
  position: absolute;
  left: 34rpx;
  top: 0rpx;
  width: 10rpx;
  height: 24rpx;
  background: #fff;
}

.li {
  position: relative;
  padding: 0 0 0 50rpx;
  margin-bottom: 77rpx;
}

.li.last {
  margin-bottom: 0rpx;
}

.li::before {
  content: '';
  position: absolute;
  left: 0rpx;
  top: 22rpx;
  width: 14rpx;
  height: 14rpx;
  background: #3072f6;
  border-radius: 19rpx;
}

.li-head {
  position: relative;
  height: 58rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.li-title {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

.refund-finished {
  position: absolute;
  top: 129rpx;
  right: 30rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

.refund-btn {
  position: absolute;
  top: 133rpx;
  right: 12rpx;
  width: 142rpx;
  height: 46rpx;
  background: rgba(233, 240, 255, 1);
  border-radius: 22rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(48, 114, 246, 1);
  line-height: 46rpx;
  transform: rotateZ(360deg);
}

.refund-ing {
  position: absolute;
  top: 129rpx;
  right: 30rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #DC2F2F;
  line-height: 40rpx;
}

.li-cnt {
  position: relative;
  margin-top: 24rpx;
  background: linear-gradient(139deg, RGBA(239, 247, 255, 1) 0%, RGBA(250, 252, 254, 1) 100%);
  border-radius: 10rpx;
  border: 1rpx solid rgba(89, 150, 255, 0.11);
  padding: 26rpx 30rpx 32rpx 40rpx;
}

.li-name {
  height: 42rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #000000;
  line-height: 42rpx;
  width: 400rpx;
}

.li-hotel {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 400rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
  padding: 0 0 0 40rpx;
  background: transparent url('https://static.tojoyshop.com/images/wxapp-obh/record/jiudian.png') no-repeat left center/30rpx auto;
}

.li-room {
  width: 400rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
  padding: 0 0 0 40rpx;
  background: transparent url('https://static.tojoyshop.com/images/wxapp-obh/record/fangjian.png') no-repeat left center/30rpx auto;
}

.li-money {
  position: absolute;
  right: 30rpx;
  top: 26rpx;
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #000000;
  line-height: 45rpx;
}

.li-time {
  position: absolute;
  right: 30rpx;
  top: 78rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

.finished-refund {
  position: absolute;
  right: 164rpx;
  top: 33rpx;
  width: 124rpx;
  height: 124rpx;
}