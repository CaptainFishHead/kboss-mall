.logistics {
    /* margin-bottom: 30rpx; */
}
.logistics-hrad {
    height: 90rpx;
}
.logistics-hrad .title {
    height: 100%;
    font-size: 24rpx;
    color: #333333;
    line-height: 42rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: var(--henfu-bg);
    padding: 0 35rpx;
}
.logistics-hrad .title .title-handle {
    font-size: 28rpx;
    color: #999999;
    line-height: 40rpx;
    font-weight: 400;
}
.logistics-hrad .title .title-handle::after {
    content: ' ';
    height: 12rpx;
    width: 12rpx;
    display: inline-block;
    border-top: 1rpx solid #999999;
    border-right: 1rpx solid #999999;
    transform: rotate(45deg) translateY(-4rpx) translateX(0rpx);
    vertical-align: middle;
}

.logistics-hrad .title .text {
    color: #333333;
    line-height: 33rpx;
    font-size: 24rpx;
    margin-top: 14rpx;
}
.logistics-hrad .title .text-value {
    color: #666666;
    padding-left: 10rpx;
    padding-right: 21rpx;
}
.logistics-hrad .title .text-copy {
    width: 72rpx;
    height: 38rpx;
    line-height: 38rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 4rpx;
    border: 2rpx solid #0D0E15;
    color: #0D0E15;
}

.logistics-box {
    padding: 33rpx 35rpx 0 35rpx;
}
.logistics-box .group-box {
    display: flex;
}

.logistics-box .group-box .left-box {
    width: 50rpx;
    flex-shrink: 0;
    position: relative;

}
.logistics-box .group-box .left-box .pic {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    left: 0;
    right: 0;
    z-index: 10;
    display: block;
}
.logistics-box .group-box .left-box::after {
    content: '';
    display: block;
    width: 2rpx;
    height: 100%;
    background: #B58209;
    position: absolute;
    left: calc(50% - 1rpx);
}
.logistics-box .group-box .left-box .dot {
    width: 16rpx;
    height: 16rpx;
    /* background: #B58209; */
    border: 2rpx solid #B58209;
    border-radius: 50%;
    position: absolute;
    left: calc(50% - 8rpx);
    box-sizing: border-box;
}
.logistics-box .group-box .left-box::after,.logistics-box .group-box .left-box .dot {
    top: 12rpx;
}

.logistics-box .group-box .right-box {
    font-size: 24rpx;
    font-weight: 400;
    color: #666666;
    line-height: 33rpx;
    padding: 0 0 63rpx 30rpx;
}
.logistics-box .group-box .right-box .status1 {
    font-size: 32rpx;
    font-weight: bold;
    color: #B58209;
    line-height: 45rpx;
    margin-bottom: 8rpx;
}
.logistics-box .group-box .right-box .status2 {
    font-size: 30rpx;
    font-weight: bold;
    color: #333333;
    line-height: 42rpx;
    margin-bottom: 8rpx;
}
.logistics-box .group-box .right-box .text1 {
    margin-bottom: 6rpx;
}
.logistics-box .group-box .right-box .text2 {
    margin-bottom: 6rpx;
    color: #333333;
    line-height: 40rpx;
    font-size: 28rpx;
}
.logistics-box .group-box .right-box .text3 {
    color: #DB1C20;
    line-height: 33rpx;
    margin-top: 10rpx;
}
.logistics-box .group-box .right-box .empty {
    min-height: 50rpx;
    display: flex;
    align-items: center;
}
.logistics-box .group-box .right-box .text3::after {
    content: ' ';
    height: 12rpx;
    width: 12rpx;
    display: inline-block;
    border-top: 1rpx solid #DB1C20;
    border-right: 1rpx solid #DB1C20;
    transform: rotate(45deg) translateY(-4rpx) translateX(1rpx);
    vertical-align: middle;
}

.logistics-box .group-box:last-child .left-box::after {
    display: none;
}