.cart-title {
  width: 100%;
  padding-top: 38rpx;
  padding-bottom: 28rpx;
  background: var(--card-title-bg);
  box-shadow: inset 0rpx 0rpx 3rpx 1rpx #FFFFFF;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cart-title-img {
  margin-bottom: 7rpx;
  height: 47rpx;
}

.cart-title-des {
  height: 47rpx;
  padding: 0 23rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(90deg, #FF4E4A 0%, #BF2420 100%);
  border-radius: 6rpx;
  border: 2rpx solid #FFFFFF;
  color: #F4E7D0;
  font-size: 26rpx;
  font-weight: bold;
}