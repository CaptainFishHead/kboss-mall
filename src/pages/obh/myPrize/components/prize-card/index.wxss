.prize-card {
  display: block;
  height: unset;
  position: relative;
}
.timeout .order-name-area .order-name,
.timeout .order-name-area .order-sku {
  color: #999;
}

.order-items-warp {
  position: relative;
  display: flex;
  justify-content: flex-start;
  padding: 30rpx 24rpx;
}

.scroll-view-width {
  background-size: cover;
  background-repeat: no-repeat;
}

.order-items-warp .order-img-area {
  border-radius: 4rpx;
  font-size: 0;
}

.order-items-warp .order-img-area .images {
  height: 162rpx;
  width: 160rpx;
}

.order-name-area {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-left: 30rpx;
}

.order-name-area .order-name {
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 480rpx;
  line-height: 40rpx;
  margin-bottom: 6rpx;
}

.order-name-area .order-sku {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  line-height: 33rpx;
}

.order-name-area .order-sku .order-sku-time {
  margin-bottom: 2rpx;
}

.order-name-area .order-sku .order-sku-name {
  max-width: 325rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.prize-btn {
  position: absolute;
  height: 60rpx !important;
  right: 24rpx;
  bottom: 30rpx;
  font-size: 24rpx !important;
  /* font-weight: normal !important; */
}