.pop-bg{
  position: fixed;
  top:0;
  left:0;
  z-index:999;
  width:100%;
  height: 100%;
  min-height: 100vh;
  background: rgba(0,0,0,0.5);
}
.pop-box {
	padding: 50rpx 0 0;
	width: 630rpx;
	background: #ffffff;
	border-radius: 20rpx;
	position: absolute;
	top: 46%;
	left: 50%;
	transform: translate3d(-50%, -50%, 0);
}

.title {
	font-size: 34rpx;
	text-align: center;
	font-weight: bold;
	color: #333333;
	line-height: 53rpx;
}

.tip-txt {
	padding: 0 40rpx;
	text-align: center;
	font-size: 34rpx;
	font-weight: 400;
	color: #666666;
	line-height: 48rpx;
	margin-top: 26rpx;
	display: block;
	max-height: 620rpx;
	overflow-y: auto;
}

.footer {
	margin: 52rpx 0 46rpx 0;
	text-align: center;
	justify-content: center;
	display: flex;
	align-items: center;
}

.footer .cancel {
	width: 256rpx;
	height: 90rpx;
	line-height: 90rpx;
	border-radius: 0rpx;
	background: #f6f6f6;
	border-radius: 46rpx;
	text-align: center;
	font-size: 32rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: bold;
	color: #495a78;
	margin-right: 34rpx;
	transform: rotateZ(360deg);
}

.footer .confirm {
	width: 256rpx;
	height: 90rpx;
	line-height: 90rpx;
	border-radius: 0rpx;
	background: #3072f6;
	border-radius: 46rpx;
	text-align: center;
	font-size: 32rpx;
	font-weight: bold;
	color: #ffffff;
}

.footer .alert-confirm {
	width: 550rpx;
	height: 90rpx;
	line-height: 90rpx;
	background: #3072f6;
	border-radius: 46rpx;
	text-align: center;
	font-size: 32rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: bold;
	color: #ffffff;
}

.van-overlay {
	z-index: 99999 !important;
}
