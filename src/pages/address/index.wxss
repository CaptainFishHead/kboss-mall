/* pages/address/index.wxss */
@import "./../../components/toast/index.wxss";
.address-list {
    padding-bottom: 150rpx;
    margin-top: 20rpx;
}

.address-info {
    display: flex;
    justify-content: space-between;
    margin: 0 30rpx;
    padding: 30rpx 0 40rpx;
}

.address-info .check-box {
    margin-top: 10rpx;
    margin-right: 22rpx;
}

.address-info .user-info {
    flex: 1;
    margin-right: 45rpx;
}

.address-info .info {
    font-size: 30rpx;
    font-weight: bold;
    color: #0D0E15;
}

.address-info .tel {
    padding-left: 26rpx;
    font-size: 28rpx;
    font-weight: normal;
}

.address-info .label {
    width: 58rpx;
    height: 28rpx;
    background: linear-gradient(180deg, #EFD8A6 0%, #CFAF65 100%);
    color: #000;
    font-size: 20rpx;
    display: inline-block;
    text-align: center;
    line-height: 28rpx;
    border-radius: 3rpx;
    vertical-align: top;
    margin-top: 10rpx;
    margin-left: 8rpx;
}

.address-info .address-details {
    font-size: 28rpx;
    color: #333;
    line-height: 46rpx;
    margin-top: 8rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;

}

.address-info .edit {
    width: 28rpx;
    height: 28rpx;
    margin-top: 10rpx;
    margin-right: 10rpx;
}