.obh-wrap,.obh-wrap view,.obh-wrap image,.obh-wrap text,.obh-wrap navigator{
  box-sizing: border-box;
}
.obh-wrap image{
  display: block;
}
.obh-wrap,.obh-wrap view,.obh-wrap text{
  font-family: PingFangSC-Regular, PingFang SC;
}
.line2hidden{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-word;
}
.line3hidden {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-word;
}
/* 超出一行省略号显示 */
.line1hidden{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-word;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}

.clearfix {
  zoom: 1;
}