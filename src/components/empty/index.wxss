/* components/empty/index.wxss */
.empty-wrapper {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-wrapper .empty-icon {
  text-align: center;
}

.empty-wrapper .empty-icon image {
  width: 300rpx;
  height: 210rpx;
}

.empty-wrapper .empty-text {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #000;
  line-height: 40rpx;
  text-align: center;
  margin: 30rpx auto 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 690rpx;
}

.empty-wrapper .gobtn, .empty-wrapper .gobtn.button-hover {
  display: inline-block !important;
  width: auto !important;
  height: 76rpx !important;
  line-height: 76rpx !important;
  font-weight: 400 !important;
  padding: 0 50rpx;
}